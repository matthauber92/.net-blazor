@using BlazorApp.Domain
@using BlazorApp.Domain.Repositories

@rendermode InteractiveServer
@inject IProductRepository ProductRepo

@page "/products"

<PageTitle>Products</PageTitle>

<div class="container py-5">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="fw-bold mb-0">📦 Products</h1>
        <button class="btn btn-primary btn-lg shadow-sm"
                @onclick="() => showAddModal = true">
            <i class="bi bi-plus-lg"></i> Add Product
        </button>
    </div>

    @if (products == null)
    {
        <div class="text-center mt-5">
            <div class="spinner-border text-primary" role="status"></div>
            <p class="mt-3 text-muted">Loading products...</p>
        </div>
    }
    else if (!products.Any())
    {
        <div class="alert alert-info text-center py-4">
            No products found. Click <strong>Add Product</strong> to create one.
        </div>
    }
    else
    {
        <div class="card shadow-sm border-0">
            <div class="card-body p-0">
                <table class="table table-hover mb-0">
                    <thead class="table-light">
                        <tr>
                            <th>Name</th>
                            <th>Price</th>
                            <th style="width:120px;"></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var product in products)
                        {
                            <tr>
                                <td class="align-middle">@product.Name</td>
                                <td class="align-middle">$@product.Price</td>
                                <td class="align-middle text-end">
                                    <button class="btn btn-outline-danger btn-sm"
                                            @onclick="() => DeleteProduct(product.Id)">
                                        <i class="bi bi-trash"></i>
                                        Delete
                                    </button>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    }
</div>

<!-- Modal -->
@if (showAddModal)
{
    <div class="modal fade show d-block" tabindex="-1" style="background: rgba(0,0,0,0.55);">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content shadow">

                <div class="modal-header">
                    <h5 class="modal-title fw-bold">Add New Product</h5>
                    <button type="button" class="btn-close" @onclick="CloseModal"></button>
                </div>

                <div class="modal-body">
                    <div class="mb-3">
                        <label class="form-label fw-semibold">Product Name</label>
                        <input @bind="newProductName"
                               class="form-control form-control-lg"
                               placeholder="Enter product name" />
                    </div>

                    <div class="mb-3">
                        <label class="form-label fw-semibold">Price</label>
                        <input type="number"
                               @bind="newProductPrice"
                               class="form-control form-control-lg"
                               placeholder="Enter price" />
                    </div>

                    @if (formError != null)
                    {
                        <div class="alert alert-danger mt-2">@formError</div>
                    }
                </div>

                <div class="modal-footer">
                    <button class="btn btn-light" @onclick="CloseModal">Cancel</button>
                    <button class="btn btn-primary" @onclick="SubmitAddProduct">
                        <i class="bi bi-check-circle"></i> Add Product
                    </button>
                </div>

            </div>
        </div>
    </div>
}

@code {
    private List<Product>? products;

    private string newProductName = "";
    private decimal newProductPrice;
    private bool showAddModal = false;
    private string? formError;

    protected override async Task OnInitializedAsync() => await LoadProducts();

    private async Task LoadProducts()
    {
        var list = await ProductRepo.GetAllByAsync();
        products = list.ToList();
        await InvokeAsync(StateHasChanged);
    }

    private void CloseModal()
    {
        showAddModal = false;
        newProductName = "";
        newProductPrice = 0;
        formError = null;
    }

    private async Task SubmitAddProduct()
    {
        if (string.IsNullOrWhiteSpace(newProductName))
        {
            formError = "Name is required.";
            return;
        }
        if (newProductPrice <= 0)
        {
            formError = "Price must be greater than 0.";
            return;
        }

        try
        {
            var product = new Product(newProductName, newProductPrice, userId: 1);

            await ProductRepo.AddAsync(product);
            await ProductRepo.SaveChangesAsync();

            await LoadProducts();
            CloseModal();
        }
        catch (Exception ex)
        {
            formError = "Error: " + ex.Message;
        }
    }

    private async Task DeleteProduct(int id)
    {
        try
        {
            var product = await ProductRepo.GetByIdAsync(id);
            if (product == null)
                return;

            ProductRepo.Delete(product);
            await ProductRepo.SaveChangesAsync();

            await LoadProducts();
        }
        catch (Exception ex)
        {
            Console.WriteLine("DELETE ERROR: " + ex.ToString());
        }
    }
}
